@model MvcMovie.Model.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Create Person</h1>
<h4>Person</h4>
<hr />


<form asp-action="Upload" enctype="multipart/form-data">
    <div class="row form-control">
        <label class="col-md-2">Import data from Excel</label>
        <input type="file" name="file" class="col-sm-4" />
        <input type="submit" value="Upload" class="btn btn-primary col-sm-1" />
    </div>
</form>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <input asp-for="PersonId" class="form-control" />
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <!-- Thêm các trường khác ở đây -->
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>